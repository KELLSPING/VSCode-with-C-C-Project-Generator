{
    "version": "0.2.0",
    "configurations": [
        {
            /* Debug task name */
            "name": "Debug",
            "type": "cppdbg",
            "request": "launch",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            /* Debugger path */
            "miDebuggerPath": "C:\\ProgramData\\chocolatey\\bin\\gdb.exe",
            /* Debugged program path  */
            "program": "${workspaceFolder}\\output\\${fileBasenameNoExtension}.exe",
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ],
            /* Task name */
            "preLaunchTask": "C/C++: gcc.exe 建置使用中檔案"
        }
    ]
}
